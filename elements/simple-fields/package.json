{
  "name": "@lrnwebcomponents/simple-fields",
  "wcfactory": {
    "className": "SimpleFields",
    "customElementClass": "LitElement",
    "elementName": "simple-fields",
    "generator-wcfactory-version": "0.7.1",
    "useHAX": true,
    "useSass": false,
    "files": {
      "css": "src/simple-fields.css",
      "scss": "src/simple-fields.scss",
      "html": "src/simple-fields.html",
      "js": "src/simple-fields.js",
      "properties": "src/simple-fields-properties.json",
      "hax": "src/simple-fields-hax.json"
    },
    "sharedStyles": [
      "...super.styles"
    ]
  },
  "version": "4.0.4",
  "description": "Uses JSON Schema or an array of fields to display a series of fields",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "type": "module",
  "main": "simple-fields.js",
  "module": "simple-fields.js",
  "umd": "simple-fields.umd.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "gulp --gulpfile=gulpfile.cjs && node --experimental-json-modules ../../node_modules/.bin/rollup --config && prettier --ignore-path ../../.prettierignore --write \"**/*.{js,json}\" && wca analyze \"**/*.js\" --format vscode --outFile vscode-html-custom-data.json",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "gulp dev --gulpfile=gulpfile.cjs",
    "serve": "web-dev-server -c ../../web-dev-server.config.js",
    "lighthouse": "gulp lighthouse --gulpfile=gulpfile.cjs",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox --watch",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox"
  },
  "author": {
    "name": "nikkimk"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lrnwebcomponents/i18n-manager": "^4.0.1",
    "@lrnwebcomponents/a11y-tabs": "^4.0.4",
    "@lrnwebcomponents/code-editor": "^4.0.4",
    "@lrnwebcomponents/hax-iconset": "^4.0.4",
    "@lrnwebcomponents/responsive-utility": "^4.0.4",
    "@lrnwebcomponents/simple-colors": "^4.0.4",
    "@lrnwebcomponents/utils": "^4.0.4",
    "@lrnwebcomponents/simple-icon": "^4.0.4",
    "@lrnwebcomponents/simple-icon-picker": "^4.0.4",
    "@lrnwebcomponents/simple-login": "^4.0.4",
    "@lrnwebcomponents/simple-picker": "^4.0.4",
    "@lrnwebcomponents/simple-toolbar": "^4.0.4",
    "@lrnwebcomponents/simple-tooltip": "^4.0.1",
    "@lrnwebcomponents/voice-recorder": "^4.0.4",
    "@vaadin/vaadin-upload": "^4.4.1",
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^4.0.0",
    "@open-wc/testing": "3.0.3",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "3.1.0",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "concurrently": "5.3.0",
    "gulp-babel": "8.0.0",
    "lodash": "^4.17.21",
    "@web/dev-server": "0.1.28",
    "wct-browser-legacy": "1.0.2",
    "web-animations-js": "2.3.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ]
}
