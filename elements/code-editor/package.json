{
  "name": "@lrnwebcomponents/code-editor",
  "wcfactory": {
    "className": "CodeEditor",
    "customElementClass": "PolymerElement",
    "elementName": "code-editor",
    "generator-wcfactory-version": "0.3.1",
    "useHAX": true,
    "useSass": false,
    "files": {
      "css": "src/code-editor.css",
      "scss": "src/code-editor.scss",
      "html": "src/code-editor.html",
      "js": "src/code-editor.js",
      "properties": "src/code-editor-properties.json",
      "hax": "src/code-editor-hax.json"
    },
    "sharedStyles": []
  },
  "version": "7.0.2",
  "description": "Data binding wrapped on top of a popular code editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "type": "module",
  "main": "code-editor.js",
  "module": "code-editor.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "gulp --gulpfile=gulpfile.cjs && prettier --ignore-path ../../.prettierignore --write \"**/*.{js,json}\" && wca analyze \"{*,lib/**}.js\" --format vscode --outFile custom-elements.json",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "gulp dev --gulpfile=gulpfile.cjs",
    "serve": "web-dev-server -c ../../web-dev-server.config.mjs",
    "lighthouse": "gulp lighthouse --gulpfile=gulpfile.cjs",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox --watch",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox"
  },
  "author": {
    "name": "btopro"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lrnwebcomponents/schema-behaviors": "^7.0.2",
    "@lrnwebcomponents/utils": "^7.0.2",
    "lit": "^2.7.4",
    "monaco-editor": "0.32.1"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^7.0.2",
    "@lrnwebcomponents/storybook-utilities": "^7.0.2",
    "@open-wc/testing": "3.0.4",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "3.1.0",
    "@web/dev-server": "0.1.34",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "7.4.0",
    "wct-browser-legacy": "1.0.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ],
  "gitHead": "7087ebc5fd7f631a2a78ad40af08384933139929"
}
